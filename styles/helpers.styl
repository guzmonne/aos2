.show-on-hover
	display none
	opacity 0.3
	&:hover
		opacity 1

.hidden-content:hover > .show-on-hover
	display inline

.float-right
	float right
	
.align-container-padding-1x
	padding-left  2 * $pad
	padding-right  2 * $pad
	
.text-danger
	color $red

.text-danger:hover
	color $red-dark
	
.add-margin-bottom
	margin-bottom $pad
	
.pointer
	cursor: pointer
	
tr.row-disabled
	background-color #E0E0E0 !important
	a, i, text, span.text-muted 
		opacity 0.5
	td > input
		opacity 1
		color red
	&:hover
		background-color #DCDCDC !important